<%= form_with(model: [:backend, @product]) do |f| %>
    <div class="form-group">
      <%= f.label :title, 'Nombre' %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :prod_id, 'Codigo' %>
      <%= f.text_field :prod_id %>
    </div>
    <div class="form-group">
      <%= f.label :title, 'Categoria' %>
      <%= f.collection_select :category_id, Category.all, :id, :name, {include_blank: 'Todas'} %>
    </div>
    <div class="form-group">
      <%= f.label :title, 'Etiquetas' %>
      <%= f.collection_select :tag_id, Tag.all, :id, :name, {include_blank: 'Todas'} %>
    </div>
    <div>
      <%= f.label :price, 'Precio' %>
      <%= f.text_field :price %>
    </div>
    <div>
     <%= f.label :cost, 'Costo' %>
     <%= f.text_field :cost %>
    </div>

    <div>
      <%= f.label :description, 'Descripcion' %>
      <%= f.text_area :description %>
    </div>    
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="active">
      <label class="form-check-label" for="active">
    Activo
  </label>
    </div>
    
    <%= f.submit 'Guardar' %>
  <% end %>

