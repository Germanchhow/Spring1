<table>
  <tr>
    <td><%= tag.name %></td>
 
      <td class='text-right'>
       <%= link_to 'Ver', backend_tag_path(tag), class: 'btn btn-sm btn-outline-info' %>
       <%= link_to 'Editar', edit_backend_tag_path(tag), class: 'btn btn-sm btn-outline-warning' %>
       <%= link_to 'Borrar', backend_tag_path(tag), method: :delete, data: { confirm: 'Esta seguro?' }, class: 'btn btn-sm btn-outline-danger' %>
       </td>
  </tr>
</table>